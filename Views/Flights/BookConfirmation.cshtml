@{
    ViewBag.Title = "Booking Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-success text-center">Booking Confirmed 🎉</h2>
        <hr />

        <p><b>Passenger Name:</b> @ViewBag.PassengerName</p>
        <p><b>Email:</b> @ViewBag.Email</p>
        <p><b>Mobile:</b> @ViewBag.Mobile</p>
        <p><b>Flight ID:</b> @ViewBag.FlightId</p>
        <p><b>Seats:</b> @ViewBag.Seats</p>
        <p><b>Total Price:</b> ₹@ViewBag.TotalPrice</p>

        <div class="text-center mt-3">
            <a href="/Flights/PaymentSuccess" class="btn btn-primary">Proceed to Payment</a>
        </div>

    </div>
</div>
