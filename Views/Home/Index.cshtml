<div class="bg-light p-5 rounded-3 shadow-sm text-center">
    @if (Session["UserName"] != null)
    {
        <h1 class="display-5 fw-bold text-primary">Welcome to FlightBooking ✈️</h1>
        <p class="lead text-muted">Welcome back! Ready to book your next flight?</p>
    }
    else
    {
        <h1 class="display-5 fw-bold text-primary">Welcome to FlightBooking ✈️</h1>
        <p class="lead text-muted">Search, book, and manage your flights easily</p>
    }
</div>

<!-- Flight Search Form -->
<div class="card shadow mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Find Your Flight</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Search", "Flights", FormMethod.Get))
        {
            <div class="row g-3">
                <div class="col-md-4">
                    @Html.Label("From City", htmlAttributes: new { @class = "form-label" })
                    <input type="text" name="FromCity" class="form-control" placeholder="Enter origin city" required />
                </div>
                <div class="col-md-4">
                    @Html.Label("To City", htmlAttributes: new { @class = "form-label" })
                    <input type="text" name="ToCity" class="form-control" placeholder="Enter destination city" required />
                </div>
                <div class="col-md-3">
                    @Html.Label("Departure Date", htmlAttributes: new { @class = "form-label" })
                    <input type="date" name="Date" class="form-control" required min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">Search</button>
                </div>
            </div>
        }
    </div>
</div>

