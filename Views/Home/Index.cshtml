@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ✅ Login Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div id="loginAlert" class="alert alert-success text-center mx-auto mt-3"
         style="max-width: 400px;" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<!-- ✅ Logout Alert -->
@if (Session["LogoutMessage"] != null)
{
    <div id="logoutAlert" class="alert alert-danger text-center mx-auto mt-3"
         style="max-width: 400px;" role="alert">
        @Session["LogoutMessage"]
    </div>

    <!-- ✅ Clear message after showing -->
    { Session["LogoutMessage"] = null; }
}



<style>
    .fade-out {
        opacity: 0;
        transition: opacity 1s ease-out;
    }
</style>

<script>
    function fadeOut(id) {
        var alertBox = document.getElementById(id);
        if (alertBox) {
            alertBox.classList.add("fade-out");
            setTimeout(function () {
                alertBox.style.display = "none";
            }, 1000);
        }
    }

    // ✅ Auto hide after 3 sec
    setTimeout(function () { fadeOut("loginAlert"); }, 3000);
    setTimeout(function () { fadeOut("logoutAlert"); }, 3000);
</script>



